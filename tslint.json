{
  "rules": {
    "class-name": true,
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-operator",
      "check-separator",
      "check-type",
      "check-module"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "no-var-keyword": true,
    "no-internal-module": true,
    "no-inferrable-types": true,
    "curly": true,
    "eofline": true,
    "forin": true,
    "indent": "spaces",
    "jsdoc-format": true,
    "interface-name": true,
    "triple-equals": true,
    "use-strict": [
      "check-function",
      "check-module"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": false
  }
}